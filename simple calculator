#include<iostream>
using namespace std;
int main()
{
    int a,b;
    cout<<"enter the value of a and b";
    cin>>a>>b;

    char op;
    cout<<"enter the operation to perform";
    cin>>op;

    switch (op)
    {

    case '+':
    cout<<a + b <<endl;
    break;

    case '-':
    cout<<a - b <<endl;
    break;

    case '*':
    cout<<a * b <<endl;
    break;

    case '/':
    cout<<a / b <<endl;
    break;
    
    default:
    cout<<"another operator perform";
    break;
    
    }

    return 0;
}
